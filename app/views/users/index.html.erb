<h3>All Users</h3>

<ul>
	<% @users.each do |user| %>
		<li><a href= <%=user_url(user.id)%>><%= user.name %> , age: <%= age(user.birthdate)%></a> 
		<% if user_signed_in? %>
			<% if user.id != current_user.id %>
				<%if current_user.followings.include?(user)%>
					<p>pending</p>
				<%else%>
					<%=link_to 'Add friend', friend_requests_path(:id => user.id), method: :post%></li>
				<%end%>
			<%end%>
		<%else%>
			<%=link_to 'Add friend', friend_requests_path(:id => user.id), method: :post%></li>
		<%end%>
	<% end %>
</ul>