
<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
	<div class="row">
		<div class="col-md-offset-3 col-md-6 ">
		
		<%=render 'shared/error_messages'%>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :name, "Name:", class: "col-md-offset-2 col-md-2 control-label" %>
		<div class="col-md-5">
			<%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :email, "Email:", class: "col-md-offset-2 col-md-2 control-label" %>
		<div class="col-md-5">
			<%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :birthdate, "Birthdate:", class: "col-md-offset-2 col-md-2 control-label"%>
		<div class="col-md-5">
			<%= f.date_select :birthdate, {order: [:month, :day, :year], start_year: Date.today.year, end_year: Date.today.year - 100, class: "form-control"}, {required: true}%>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-4 col-md-10">
			<button type="submit" class="btn btn-default">Submit</button>
		</div>
	</div>
<% end %>
